@model IEnumerable<SalesWebMvc.Models.Department>
<!--Coleção de Departament, usa o Ienumerable pois é uma coleção + genérica-->
    @{
        ViewData["Title"] = "Departments";
    }

    <h1>Departments</h1>

    <p>
        <a asp-action="Create">Create New</a><!--asp-action = Cria automáticamente um link que aponta p/ coleção Create desse mesmo controlador-->
    </p>
    <table class="table"><!--Tabela com dados do departamento.-->
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                    </td>
                </tr>
            }
        </tbody>
    </table>
